@import '../config'

.menu
	position absolute
	opacity 0
	background white
	pointer-events none
	border-radius 4px
	box-shadow 0 2px 4px 2px rgba(black, 25%)
	z-index 99
	transition opacity $transition
	a
		display block
		text-align center
		padding 16px

	&.shown
		opacity 1
		pointer-events initial
