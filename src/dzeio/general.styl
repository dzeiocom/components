@import "_aileron"

*
*::before
*::after
	box-sizing border-box

html
	font-family Aileron, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif

html
body
body > div[id="__next"]
	margin 0
	min-height 100vh
	background #f5f5f5

	@media (prefers-color-scheme dark)
		background #202020

a
	color inherit
	text-decoration none
