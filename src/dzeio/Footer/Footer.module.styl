@import '../config.styl'

.footer
	padding 24px 16px
	background $foregroundLight
	@media (prefers-color-scheme dark)
		background $foregroundDark

	ul
		list-type none
		li
			display inline-block

.animation
	animation grow 1s linear infinite
	display inline-block
	vertical-align middle
	margin 0 2px

@keyframes grow
	0%
	40%
	60%
	95%
		transform scale(1)
	50%
	70%
		transform scale(1.2)
