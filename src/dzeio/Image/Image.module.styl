.parent
	position relative

.image
	transition .3s
	object-fit contain
	z-index 2

	&.ph1
		position fixed
		transition 0s


	&.ph2
		width 100% !important
		position fixed
		max-width 100% !important
		max-height 100% !important
		box-sizing border-box
		padding 5%
		top 0 !important
		left 0 !important
		height 100%
		background #000000A0


	&.after
		background #00000000
		// height 100%
		box-sizing border-box
		position fixed
		// width 100%
		z-index 0
		padding initial


.hideOverflow
	overflow hidden


.none
	display none
